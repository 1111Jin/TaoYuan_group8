<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:layout_centerVertical="true">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_tou"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/people"/>
    <RelativeLayout
        android:id="@+id/rl_nameriqi"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_tou"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:text="userName"/>
    <TextView
        android:id="@+id/tv_time2"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-01"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_help_title"
        android:layout_below="@+id/iv_tou"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="title"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<TextView-->
        <!--android:id="@+id/tv_help_content"-->
        <!--android:paddingLeft="20dp"-->
        <!--android:text="content"-->
        <!--android:textColor="#000"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/tv_help_title"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginBottom="10dp"/>-->
    <ImageView
        android:id="@+id/iv_hl_img"
        android:layout_below="@id/tv_help_title"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/yumaoqiu"
        android:scaleType="centerCrop"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/v_line"
        android:layout_below="@id/iv_hl_img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/bg_line"/>
</RelativeLayout>
