<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ff5619"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textColor="#fff"
            android:text="发布详情"/>
    </LinearLayout>

    <EditText
        android:id="@+id/tv_bt"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:hint="活动名称（4-25字）"
        android:layout_marginTop="70dp"/>
    <EditText
        android:layout_below="@id/tv_bt"
        android:id="@+id/tv_content1"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:paddingTop="3dp"
        android:layout_height="80dp"
        android:hint="活动介绍"/>

    <EditText
        android:layout_marginTop="16dp"
        android:id="@+id/tv_begin"
        android:layout_below="@id/tv_content1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:background="#fff"
        android:hint="开始时间"/>
    <EditText
        android:id="@+id/tv_end"
        android:layout_below="@id/tv_begin"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="40dp"
        android:paddingTop="8dp"
        android:background="#fff"
        android:hint="结束时间"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/tv_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_photo"

            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:src="@drawable/up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="上传照片"
            android:layout_gravity="center"/>
    </LinearLayout>
    <EditText
        android:id="@+id/tv_hdress"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:background="#fff"
        android:hint="活动地点"/>
    <EditText
        android:layout_below="@id/tv_hdress"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:paddingTop="8dp"
        android:hint="活动人数"/>

    <Button
        android:background="#ff5619"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="发布"
        android:textSize="22sp"/>
</RelativeLayout>
