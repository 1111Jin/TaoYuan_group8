<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_acfb_l1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#ff5619"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textColor="#fff"
            android:text="发布详情"/>
    </LinearLayout>
<ScrollView
    android:layout_below="@id/ll_acfb_l1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_acfb_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="活动标题"/>
    <EditText
        android:layout_below="@id/tv_acfb_name"
        android:id="@+id/tv_bt"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:hint="活动名称（4-25字）"/>
        <TextView
            android:paddingTop="3dp"
            android:layout_below="@id/tv_bt"
            android:id="@+id/tv_acfb_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:hint="活动介绍"/>
    <EditText
        android:layout_below="@id/tv_acfb_pro"
        android:id="@+id/tv_content1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:layout_height="80dp"
        android:hint="活动介绍"/>
        <TextView
            android:id="@+id/tv_acfb_beg"
            android:layout_below="@id/tv_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:hint="开始时间"/>

    <EditText
        android:id="@+id/tv_begin"
        android:layout_below="@id/tv_acfb_beg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:background="#fff"
        android:hint="开始时间"/>
        <TextView
            android:id="@+id/tv_acfb_ed"
            android:layout_below="@id/tv_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:hint="结束时间"/>
    <EditText
        android:id="@+id/tv_end"
        android:layout_below="@id/tv_acfb_ed"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:background="#fff"
        android:hint="结束时间"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/tv_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:src="@drawable/up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="上传照片"
            android:layout_gravity="center"/>
    </LinearLayout>
        <TextView
            android:layout_below="@id/ll"
            android:id="@+id/tv_acfb_adres"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:text="活动地点"/>
    <EditText
        android:id="@+id/tv_hdress"
        android:layout_below="@id/tv_acfb_adres"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:background="#fff"
        android:hint="活动地点"/>
        <TextView
            android:layout_below="@id/tv_hdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/tv_acfb_num"
            android:paddingLeft="10dp"
            android:text="活动人数" />
    <EditText
        android:layout_below="@id/tv_acfb_num"
        android:id="@+id/tv_hl_nums"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:paddingTop="8dp"
        android:paddingLeft="10dp"
        android:hint="活动人数"/>
    </RelativeLayout>
</ScrollView>

    <Button
        android:id="@+id/bt_submit"
        android:background="#ff5619"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="发布"
        android:textSize="22sp"/>
</RelativeLayout>
