<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tt="http://schemas.android.com/tools"
    android:background="#f5f5f5">


         />
    <com.example.administrator.taoyuan.utils.TitleBar
        android:id="@+id/huati_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        title:titleStr="发布动态"
        tt:showLeft="true"
        tt:leftText="返回"

        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_fabu1"
            android:layout_width="60dp"
            android:layout_height="39dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/title"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="发 布"/>
    </com.example.administrator.taoyuan.utils.TitleBar>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_huati_zhengwen"
        android:layout_below="@id/huati_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:paddingLeft="6dp"
        android:text="正文"/>
    <RelativeLayout
        android:id="@+id/rl_huati_rl2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_huati_zhengwen"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/neirong_c"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入内容"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_huati_rl2"
        android:id="@+id/tv_huati_photo"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:paddingLeft="6dp"
        android:text="图片"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_huati_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="6dp">
        <ImageView
            android:id="@+id/tupian_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/up"/>
    </RelativeLayout>

</RelativeLayout>