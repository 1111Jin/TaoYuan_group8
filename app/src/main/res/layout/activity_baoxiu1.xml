<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.taoyuan.activity_home.BaoxiuActivity1">
<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/title"
    >
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/nav_back"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="物业报修"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="报修记录"
        android:textColor="@color/common_bg"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        />
</RelativeLayout>
   <View
       android:id="@+id/v1"
       android:layout_below="@id/rl"
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="#EAEAEA"/>
    <RelativeLayout
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择报修类型"
            android:textSize="18sp"
            android:textColor="@color/text_clo"/>
<Button
    android:id="@+id/bt1"
    android:layout_below="@id/tv"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="个人住宅"
    android:textSize="18sp"
    android:textColor="@color/text_clo"
    android:background="@drawable/button_baoxiuleixing_selector"/>
        <Button
            android:id="@+id/bt2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="公共区域"
            android:textSize="18sp"
            android:textColor="@color/text_clo"
            android:layout_toRightOf="@id/bt1"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_baoxiuleixing_selector"/>
        <View
            android:id="@+id/v2"
            android:layout_below="@id/bt2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EAEAEA"/>
        <FrameLayout
            android:id="@+id/fl"
            android:layout_below="@id/v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
