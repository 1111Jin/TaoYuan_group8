<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/shenqing"
        android:layout_width="wrap_content"
        android:textColor="#ccc"
        android:text="好友申请"
        android:textSize="16dp"
        android:layout_marginStart="10dp"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp" />



    <ImageButton
        android:id="@+id/ib_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/shenqing"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="昵称"
        android:textSize="20dp"
        android:id="@+id/nicheng"
        android:layout_alignTop="@+id/ib_head"
        android:layout_toRightOf="@+id/ib_head"
        android:layout_toEndOf="@+id/ib_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="个人介绍"
        android:textSize="20dp"
        android:id="@+id/jianjie"
        android:layout_alignBottom="@+id/ib_head"
        android:layout_toRightOf="@+id/ib_head"
        android:layout_toEndOf="@+id/ib_head" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同意"
        android:id="@+id/agree"
        android:textSize="20dp"
        android:layout_above="@+id/jianjie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="30dp" />

</RelativeLayout>
