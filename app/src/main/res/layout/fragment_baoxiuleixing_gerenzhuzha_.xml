<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.administrator.taoyuan.fragment.Baoxiuleixing_gerenzhuzha_Fragment">
    <TextView
        android:id="@+id/tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择报修项目"
        android:textSize="18sp"
        android:textColor="@color/text_clo"/>
    <Button
        android:id="@+id/bt1"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="管道疏通"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        android:background="@drawable/button_baoxiuleixing_selector"/>
    <Button
        android:id="@+id/bt2"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/bt1"
        android:layout_marginLeft="5dp"
        android:text="水电维修"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        android:background="@drawable/button_baoxiuleixing_selector"/>
    <Button
        android:id="@+id/bt3"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/bt2"
        android:layout_marginLeft="5dp"
        android:text="房屋维修"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        android:background="@drawable/button_baoxiuleixing_selector"/>
    <Button
        android:id="@+id/bt4"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/bt3"
        android:layout_marginLeft="5dp"
        android:text="开锁/换锁"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        android:background="@drawable/button_baoxiuleixing_selector"/>
    <Button
        android:id="@+id/bt5"
        android:layout_below="@id/bt1"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:text="线路维修"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        android:background="@drawable/button_baoxiuleixing_selector"/>
   <EditText
       android:id="@+id/et"
       android:layout_width="370dp"
       android:layout_height="200dp"
       android:layout_below="@id/bt5"
       android:layout_marginTop="20dp"
       android:background="@android:drawable/edit_text"
       android:gravity="top"
       android:layout_alignLeft="@id/bt1"
       android:textSize="16sp"
       android:hint="请描述您的报修项目"
       android:textColor="#a9b7a7"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:background="@drawable/add"
        android:layout_alignBottom="@+id/et"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="3dp"
        android:layout_alignRight="@+id/et"
        android:visibility="visible"
        />
<ImageView
    android:id="@+id/imageView"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignBottom="@id/et"
    android:layout_marginBottom="7dp"
    android:layout_marginRight="5dp"
    android:scaleType="fitXY"
    android:layout_alignLeft="@id/et">
</ImageView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <Button
        android:id="@+id/bt6"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="#FAFAFA"
        android:text="下一步"
        android:gravity="center"
        android:textSize="24sp"
        />
    </LinearLayout>
</RelativeLayout>
