<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.taoyuan.utils.TitleBar
        android:background="#ccc"
        android:id="@+id/hl_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.taoyuan.utils.TitleBar>

    <ScrollView
        android:layout_below="@id/hl_content_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/rl_help_content_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_tou"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/people"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_tou"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_alignTop="@id/iv_tou"
            android:layout_marginTop="10dp"
            android:text="userName"/>
        <TextView
            android:id="@+id/integral"
            android:layout_alignBottom="@id/tv_time2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time"
            android:textSize="18sp"
            android:text="积分"/>

        <TextView
            android:id="@+id/tv_time2"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-01"
            android:layout_toRightOf="@id/iv_tou"
            android:layout_alignBottom="@id/iv_tou"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_line"
        android:layout_below="@id/rl_help_content_rl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/bg_line"/>
<LinearLayout
    android:background="#fff"
    android:id="@+id/ll_hl_l2"
    android:layout_below="@id/v_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_help_p"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/yumaoqiu"/>
</LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_hl_0"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_hl_l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_content_content"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="互帮内容"/>
        <TextView
            android:id="@+id/tv_hl_content"
            android:layout_toRightOf="@id/tv_help_content_content"
            android:layout_alignBottom="@id/tv_help_content_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
            android:textSize="22sp"
            android:text="来帮忙搬个家具"/>
        </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_below="@id/rl_hl_0"
        android:id="@+id/rl_hl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="互帮时间"/>
        <TextView
            android:id="@+id/tv_hl_time"
            android:layout_toRightOf="@id/tv_help_content_time"
            android:layout_alignBottom="@id/tv_help_content_time"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="现在是北京时间凌晨1:35"/>
        </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="10dp"
        android:id="@+id/rl_hl_2"
        android:background="#fff"
        android:layout_below="@id/rl_hl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_content_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="互帮地点"/>
        <TextView
            android:id="@+id/tv_hl_address"
            android:layout_toRightOf="@id/tv_help_content_address"
            android:layout_alignBottom="@id/tv_help_content_address"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="互帮地点"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/rl_hl_3"
        android:background="#fff"
        android:layout_below="@id/rl_hl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="需要人数"/>
        <TextView
            android:id="@+id/tv_hl_num"
            android:layout_toRightOf="@id/tv_help_content_num"
            android:layout_alignBottom="@id/tv_help_content_num"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="需要人数"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_below="@id/rl_hl_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_content_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:text="赠送积分"/>
        <TextView
            android:id="@+id/tv_hl_integral"
            android:layout_toRightOf="@id/tv_help_content_integral"
            android:layout_alignBottom="@id/tv_help_content_integral"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="赠送积分"/>

        <Button
            android:layout_below="@id/tv_hl_integral"
            android:id="@+id/bt_help"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="参与互帮"/>
    </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
