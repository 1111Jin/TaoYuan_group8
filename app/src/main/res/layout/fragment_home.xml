
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff5619">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:src="@drawable/lianxidianhua"
        android:id="@+id/iv_lianxidianhua"
        android:layout_width="80dp"
        android:layout_height="45dp" />
    <TextView
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/bottom_bar_normal_bg"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="首 页"
        android:id="@+id/textView" />
    <TextView
        android:textSize="24sp"
        android:textColor="@color/bottom_bar_normal_bg"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text="签到"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView2" />
    <ScrollView
        android:layout_below="@id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
       android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicator_margin="6dp"
            app:indicator_drawable_selected="@drawable/zhishiqi"
            app:indicator_drawable_unselected="@drawable/zhishiqi1"
            app:indicator_height="10dp"
            app:indicator_width="16dp"
            app:title_textsize="20sp"/>
    </LinearLayout>
            <View
                android:id="@+id/v"
                android:layout_below="@id/ll"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#E3E3E3"
                />
    <LinearLayout
        android:layout_below="@id/v"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/linearLayout1">
        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_wybx"
            android:drawableTop="@drawable/wybx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_clo"
            android:text="报修"
            />
        <View
            style="@style/md_line"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#E3E3E3"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_wygg"
            android:drawableTop="@drawable/wygg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_clo"
            android:text="公告"
            />
        <View
            style="@style/md_line"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#E3E3E3"
            />
        <TextView
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_xxtz"
            android:drawableTop="@drawable/xxtz"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/text_clo"
            android:text="消息"
            />
        <View
            style="@style/md_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E3E3E3"
            />
    </LinearLayout>
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/linearLayout1"
                android:background="#E3E3E3"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:textColor="@color/text_clo"
            android:gravity="center_vertical"
            android:text="活动推荐"
            />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/more"
                android:scaleType="fitXY"
                android:layout_marginTop="6dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#E3E3E3"/>
        <com.example.administrator.taoyuan.activity_home.HorizontalListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:widget="http://schemas.android.com/apk/res-auto"
            android:id="@+id/HorizontalListView"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:divider="#878787"
            widget:dividerWidth="10dp" />
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>