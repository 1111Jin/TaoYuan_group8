<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.administrator.taoyuan.activity_my.MyIntegral">

    <com.example.administrator.taoyuan.utils.TitleBar
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tt:titleStr="关于积分"
        tt:leftText="返回">

    </com.example.administrator.taoyuan.utils.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bc">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前积分为："
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"

        />
        <TextView
            android:id="@+id/my_integral"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="积分"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_border"
            android:gravity="center"
            />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="3px"
        android:background="#C0C5C7"/>
    <Button
        android:id="@+id/btn_integral_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:text="积分的获取"
        android:textSize="20sp"

        />
    <View android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="3px"
        android:background="#C0C5C7"/>
    <Button
        android:id="@+id/btn_integral_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="积分的使用"
        android:textSize="20sp"
        android:background="@color/none"
        />
    <View android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="3px"
        android:background="#C0C5C7"/>

</LinearLayout>
