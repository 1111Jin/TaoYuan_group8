<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.taoyuan.activity_home.BaoxiuActivity2">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/baoxiu_fanhui"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="物业报修"
            android:textSize="25sp"
            android:textColor="#a9b7a7"/>
        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="报修记录"
            android:textColor="#EE0000"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:background="#EAEAEA"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_marginTop="5dp"
        android:text="报修类型:"
        android:textColor="#a9b7a7"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv1"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="10dp"
        android:text="报修项目:"
        android:textColor="#a9b7a7"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv3"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textColor="@color/text_clo"
        />
    <Button
        android:id="@+id/bt"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/v1"
        android:layout_marginTop="15dp"
        android:text="重新选择"
        android:textSize="15sp"
        android:textColor="#EE0000"
        android:background="@drawable/shape_chongxuan"
        />
    <View
        android:id="@+id/v2"
        android:layout_below="@id/tv3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#EAEAEA"/>
    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系信息"
        android:textColor="@color/text_clo"
        android:textSize="18sp"
        android:layout_alignBottom="@id/v2"
        android:layout_alignLeft="@id/v2"
        android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv5"
            android:layout_marginTop="10dp"
            android:layout_below="@id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_clo"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginTop="10dp"
            android:text="请输入您的姓名"
            android:textColor="#a9b7a7"
            android:background="@null"
            android:layout_toRightOf="@id/tv7"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
    <View
        android:id="@+id/v3"
        android:layout_below="@id/et"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA"
        android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:layout_marginTop="10dp"
            android:text="手机号码"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_clo"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入您的手机号"
            android:layout_below="@id/v3"
            android:layout_marginTop="10dp"
            android:textColor="#a9b7a7"
            android:background="@null"
            android:layout_toRightOf="@id/tv6"
            android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/v4"
        android:layout_below="@id/tv6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v4"
        android:layout_marginTop="10dp"
        android:text="预约时间"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_clo"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择预约时间"
        android:layout_below="@id/v4"
        android:layout_marginTop="10dp"
        android:textColor="#a9b7a7"
        android:background="@null"
        android:layout_toRightOf="@id/tv6"
        android:layout_marginLeft="20dp"/>
    <View
        android:id="@+id/v5"
        android:layout_below="@id/tv8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EAEAEA"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v5"
        android:layout_marginTop="10dp"
        android:text="服务地址"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_clo"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入地址"
        android:layout_below="@id/v5"
        android:layout_marginTop="10dp"
        android:textColor="#a9b7a7"
        android:background="@null"
        android:layout_toRightOf="@id/tv6"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/bt7"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:textColor="#FAFAFA"
            android:text="立即报修"
            android:gravity="center"
            android:textSize="24sp"
            />
    </LinearLayout>
</RelativeLayout>

