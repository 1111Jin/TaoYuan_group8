<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radiotab" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#9c9999</item>
    </style>

    <style name="mainBottom" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <style name="activityBottom" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/border_clo</item>
    </style>

    <style name="md_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="LoadingProgressbar">
        <item name="android:indeterminateDrawable">@drawable/loading_progressbar</item>
    </style>
</resources>
